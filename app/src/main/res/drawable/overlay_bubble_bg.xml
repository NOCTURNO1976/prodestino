<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Diâmetro final da bolha -->
    <size
        android:width="48dp"
        android:height="48dp" />

    <!-- Fundo translúcido -->
    <solid android:color="#F0FFFFFF" />

    <!-- Borda suave -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />

    <!-- Respiro interno pequeno (não inflar visualmente) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>

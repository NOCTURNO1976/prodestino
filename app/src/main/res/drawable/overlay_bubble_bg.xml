<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- TAMANHO DA BOLHA: ajuste aqui (84dp, 92dp, 96dp...) -->
    <size
        android:width="92dp"
        android:height="92dp" />

    <!-- Cor de fundo levemente translúcida para destacar em qualquer tela -->
    <solid android:color="#F0FFFFFF" />

    <!-- Borda suave -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />

    <!-- Espaço interno para não “colar” a imagem na borda -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>

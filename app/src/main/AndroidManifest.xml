<!-- DO NOT put any line before <manifest> (no BOM, no spaces) -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissões base -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <!-- Vibração (p/ feedback tátil) -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- (Opcional, mas recomendado p/ iniciar/segurar CPU por pouco tempo no boot) -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- Localização (primeiro plano) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- Foreground Service (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!-- Android 12+ exige informar o tipo usado pelo serviço -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION"/>

    <!-- Localização em 2º plano (REMOVA se não usar rastreio 24h) -->
    <!-- <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/> -->

    <!-- Receber boot (para iniciar com o sistema) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <!-- Android 13+: notificações para o ForegroundService -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- **Overlay clássico**: desenhar sobre outros apps (bolha) -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <!-- Evitar filtro de dispositivos na Play -->
    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.microphone" android:required="false"/>

    <application
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="false">

        <!-- FileProvider para uploads/câmera -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Activity principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Serviço de localização em 1º plano -->
        <service
            android:name=".location.ForegroundLocationService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- **Serviço da bolha/overlay** (foreground p/ estabilidade) -->
        <service
            android:name=".overlay.OverlayService"
            android:exported="false"
            android:foregroundServiceType="none" />

        <!-- Receiver de boot/atualização do app -->
        <!--
             IMPORTANTE:
             - .location.BootReceiver deve existir e iniciar o que você precisa (ex.: serviço, agendamentos).
             - directBootAware="true" permite receber LOCKED_BOOT_COMPLETED (antes do desbloqueio do usuário).
        -->
        <receiver
            android:name=".location.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <!-- Dispara após o boot normal -->
                <action android:name="android.intent.action.BOOT_COMPLETED"/>

                <!-- Dispara antes do desbloqueio do usuário (se necessário) -->
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>

                <!-- Dispara quando o app é atualizado (útil para re-agendar tarefas) -->
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>
